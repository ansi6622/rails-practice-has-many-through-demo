<div class="page-header">
  <h1>Posts</h1>
</div>

<table class="table">
  <thead>
    <tr>
      <th>
        Name
      </th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td>
          <%= link_to post.name, post_path(post) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
